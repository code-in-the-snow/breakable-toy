
<div class="row">
  <div class="large-10 push-2 large-centered columns">
    <h1><%= @user.handle %>: Past Quizzes</h1>

    <%- if (@quizzes.size >= 1) -%>
      <table>
        <tr>
          <th>Date Taken</th>
          <th>Right Answers</th>
          <th>Percent Right Answers</th>
          <th></th>
        </tr>

        <%- @quizzes.each do |q| -%>
          <tr>
            <td><%= q.date_taken %></td>
            <td><%= q.right %></td>
            <td><%= q.percent_right %>%</td>
          </tr>
        <%- end -%>
      </table>
      <% else%>
       <div>Quiz history is empty.</div>
      <%- end -%>

    <p class="menu">
      <%= link_to 'Start New Quiz', new_user_user_question_path(@user),
           method: :get %> | <%= link_to 'Home', root_path, method: :get %>
    </p>
  </div>
</div>
