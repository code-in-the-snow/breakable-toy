<h1><%= @user.handle %></h1>

<div class="row">
<div class="large-12">
  <h1>Past Quizzes</h1>

  <%- if !@user_questions.empty? -%>
    <table>
      <tr>
        <th>Date Taken</th>
        <th>Right Answers</th>
        <th>Percent Right Answers</th>
        <th></th>
      </tr>

      <%- @user_questions.each do |q| -%>
        <tr>
          <td><%= q.created_at.strftime("%D") %></td>
          <td><%= q.correct? %></td>
          <td><%= q.response %>%</td>
        </tr>
      <%- end -%>
    </table>
     <%- else -%>
      <div>Quiz history is empty.</div>
    <%- end -%>

  <p><%= link_to 'Start New Quiz', new_user_user_question_path(@user),
         method: :get %> |
  <%= link_to 'Submit A Question', root_path, method: :get %> |
  <%= link_to 'Home', root_path, method: :get %>
  </p>
</div>
</div>
